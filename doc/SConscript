Import('env source_release_dir snapshot_dir')

#-----------------------------------------------------------------------------
# Install image files
#-----------------------------------------------------------------------------

diagrams = Split ("""hla.dia keyboard_fsm.dia""")


#-----------------------------------------------------------------------------
# source tarball
#-----------------------------------------------------------------------------

dist_files = ['SConscript'] + diagrams

env.Distribute (source_release_dir, dist_files)

env.Distribute (snapshot_dir, dist_files)
